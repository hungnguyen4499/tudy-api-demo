# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database - PostgreSQL (Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tudy_dev?schema=public"

# Database - MongoDB
MONGODB_URI="mongodb://localhost:27017/tudy_logs"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug

# Storage Provider Configuration
STORAGE_PROVIDER=minio  # or 's3'

# MinIO Configuration (for development)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=tudy

# AWS S3 Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=tudy
AWS_CLOUDFRONT_URL=https://d1234567890.cloudfront.net  # Optional